<Window x:Class="Game_Try_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Try_1"
        mc:Ignorable="d"
        Title="Pong" Name="Pong" Height="600" Width="800" Background="White">
    <Grid>
        <Button Click="Button_Click" Mouse.MouseWheel="Button_MouseWheel">
            <StackPanel>
                <Canvas x:Name="canvas" Height="500" Width="500" Background="Black">
                    <Canvas.RenderTransform>
                        <ScaleTransform x:Name="st"/>
                    </Canvas.RenderTransform>
                </Canvas>
            </StackPanel>
        </Button>
    </Grid>
</Window>
