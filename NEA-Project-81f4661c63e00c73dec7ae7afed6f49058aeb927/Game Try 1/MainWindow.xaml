<Window x:Class="Game_Try_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game_Try_1"
        mc:Ignorable="d"
        Title="Pong" Name="Pong" Height="600" Width="800" Background="White">
    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="CanvasButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid >
        <Button Style="{Binding CanvasButtonStyle}" Click="Submit_Click">
            <Canvas x:Name="canvas" Height="500" Width="500" Background="Black"></Canvas>
        </Button>
        <Grid x:Name="Settings" Width="800" Height="100" VerticalAlignment="Top">
        </Grid>
    </Grid>
</Window>
